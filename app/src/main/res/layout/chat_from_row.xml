<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/textviewfrom_chat_from_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_background"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text=" tin nhan tin nhantin nhan tin nhan v"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView_chat_from_row"
        app:layout_constraintTop_toTopOf="@+id/imageView_chat_from_row" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_chat_from_row"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/password" />

    <TextView
        android:id="@+id/Txt_time_From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/textviewfrom_chat_from_row"
        app:layout_constraintEnd_toStartOf="@+id/imageView_chat_from_row"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/GuiAnhFrom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageView_chat_from_row"
        app:layout_constraintTop_toTopOf="@+id/imageView_chat_from_row"
        app:srcCompat="@drawable/ic_image_black" />

</androidx.constraintlayout.widget.ConstraintLayout>